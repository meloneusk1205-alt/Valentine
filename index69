  <script>
    const music = document.getElementById('music');
    const soundBtn = document.getElementById('soundBtn');
    const yesBtn = document.getElementById('yes');

    // ABSOLUTELY RELIABLE: direct user gesture â†’ play()
    soundBtn.addEventListener('click', () => {
      music.currentTime = 0;
      music.volume = 100;
      music.play();
      soundBtn.innerText = 'ðŸŽµ Music playing';
      soundBtn.disabled = true;
    });

    yesBtn.addEventListener('click', () => {
      music.play();
      document.body.innerHTML = `
        <div style="display:flex;align-items:center;justify-content:center;height:100vh;background:linear-gradient(135deg,#ff9a9e,#fad0c4);">
          <div style="background:white;padding:50px 40px;border-radius:30px;text-align:center;box-shadow:0 25px 50px rgba(0,0,0,0.25);animation:pop 0.8s ease;">
            <h1 style="color:#e63946;">She said YES ðŸ’–</h1>
            <p style="font-size:18px;">And that just made everything perfect.</p>
          </div>
        </div>`;
      startHearts();
    });

    function startHearts() {
      setInterval(() => {
        const h = document.createElement('div');
        h.className = 'heart';
        h.innerText = 'â¤ï¸';
        h.style.left = Math.random() * 100 + 'vw';
        document.body.appendChild(h);
        setTimeout(() => h.remove(), 6000);
      }, 400);
    }
  </script>
